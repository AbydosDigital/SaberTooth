{
  "tags": {
    "allowUnknownTags": true
  },

  "source":{
    "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
  },

  "opts": {
    "destination": "./docs",
    "recurse": true,
    "verbose": true,
    "private": false,
    "encoding": "utf8",
    "lenient": true,
    "template": "./node_modules/jaguarjs-jsdoc"
  },

  "plugins": [
    "plugins/markdown",
    "./scripts/fixJsdoc.js"
  ],

  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    },
    "linenums": true
  }
}
